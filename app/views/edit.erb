<h1>Edit a recipe</h1>
<form method="post" action="/recipes/<%=@recipe.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: <input type='text' value="<%=@recipe.name%>" name="name"/></br></label>
  <label>Ingredients: <input type='text' value="<%=@recipe.ingredients%>" name="ingredients"/></br></label>
  <label>Cook Time: <input type='text' value="<%=@recipe.cook_time%>" name="cook_time"/></br></label>
  <input type="submit" id="submit" />
</form>
