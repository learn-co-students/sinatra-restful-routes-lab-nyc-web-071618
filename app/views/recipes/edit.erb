<form action="/recipes/<%= @recipe.id %>/edit" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input id="name" type="text" name="recipes[name]" value="<%= @recipe.name %>">
  <input id="ingredients" type="text" name="recipes[ingredients]" value="<%= @recipe.ingredients %>">
  <input id="cook_time" type="text" name="recipes[cook_time]" value="<%= @recipe.cook_time %>">
  <input id="submit" type="submit" name="submit" value="Submit">
</form>
